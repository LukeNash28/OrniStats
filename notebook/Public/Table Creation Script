--Table creation
create table records (
ID VARCHAR(1000),
RECORD INT,
SUBSET VARCHAR(10),
SITE VARCHAR(1000),
DISCOVERY_YEAR INT,
DISCOVERY_MONTH VARCHAR(1000),
DISCOVERY_DAY INT,
DISCOVERY DATE,
DEPARTURE_YEAR INT,
DEPARTURE_MONTH VARCHAR(1000),
DEPARTURE_DAY INT,
DEPARTURE DATE,
STAY_LENGTH INT,
AGE VARCHAR(1000),
SEX VARCHAR(10),
DEATH_SCORE INT,
NOTES VARCHAR(1000));

create table species (
ID VARCHAR(1000),
SPECIES VARCHAR(1000),
"ORDER" VARCHAR(1000),
"GROUP" VARCHAR(1000),
REALM VARCHAR(1000));

create table sites (
SITE VARCHAR(1000),
AREA VARCHAR(1000),
RECORDING_AREA VARCHAR(100),
LAT numeric,
LONG numeric,
OFFSHORE int,
REGION VARCHAR(1000),
SUBREGION VARCHAR(1000)
)

create table counties (
RECORDING_AREA VARCHAR(1000),
LATITUDE FLOAT,
LONGITUDE FLOAT);